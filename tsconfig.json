{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "styleUtilities/*": ["./src/shared/styles/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
}